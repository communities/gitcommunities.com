@import 'nib'
global-reset();
*
  box-sizing: border-box;
  outline: 0;


$firstColor = #FFF200;
$secondColor = #252525;
$thirdColor = #746E17;
$fourthColor = #555555;

html
  height: 100%;
  overflow-x: hidden;
  &.unlogined
    & .unlogined-show
      display: block;
    & .logined-show
      display: none;
  &.logined
    & .logined-show
      display: block;
    & .unlogined-show
      display: none;

html
body
  font-family: Helvetica, arial, freesans, clean, sans-serif;
  -webkit-font-smoothing: antialiased;


body
  height: 100%;
  background-color: white;


::-moz-selection
  background: $firstColor; 
  color: $secondColor;
  text-shadow: none;
::selection
  background: $firstColor; 
  color: $secondColor;
  text-shadow: none;

.input
  display: inline-block;
  width: 210px;
  height: 18px;
  padding: 14px;
  margin-bottom: 9px;
  margin: 0;
  font-size: 13px;
  line-height: 18px;
  color: #393C3D;
  border: 1px solid #CCC;
  border-radius: 2px;
  outline: none;
  transition: border linear 0.2s, box-shadow linear 0.2s;
  &:focus
    border-color: $firstColor;
  &.error
    border-color: red;
    opacity: 0.8;  

a
a:visited
  text-decoration: none;
  color: white;


textarea.input
  overflow: hidden;
  vertical-align: top;
  padding: 10px;
  height: 60px;

form
  & .input
    display: block;
    width: 100%;
    margin-bottom: 20px;

a.btn    
.btn
  display: inline-block;
  background-color: $firstColor;
  color: $secondColor;
  border-radius: 3px;
  padding: 14px 28px;
  text-transform: uppercase;
  font-weight: 800;
  letter-spacing: 1px;
  font-size: 15px;
  border: 0;
  line-height: 1;
  vertical-align: baseline;
  margin: 0 2px;
  font-weight: normal;
  font-family: arial;
  cursor: pointer;
  &:hover
    background-color: $fourthColor;
    color: white;
  &.small
    padding: 9px 18px;  

.panel
  display: inline-block;
  background: #FAFAF5;
  margin: 4% 0 0 0;
  box-shadow: 1px 2px 2px rgba(0, 0, 0, .15);
  border-radius: 6px;
  position: relative;
  min-height: 70px;
  overflow: hidden;

.items-list
  min-height: 150px;
  margin-bottom: 80px;
  & > li
    margin: 0;
    padding: 10px 20px;
    background: white;
    border-radius: 0;
    border-top: 1px solid $thirdColor;
    position: relative;
    min-height: 80px;
    list-style: none;
    & h1
    & p
    & a
    & a:visited
      color: black;    
      color: black;
    & h1
      font-weight: bold;
    &.selectable:hover
      border-left: 7px solid $fourthColor;
      & .details
        margin-left: 93px;
      // background-color: $fourthColor;
      // cursor: pointer;
      // color: white;
      // & h1
      // & p
      // & .metadata
      // & .counter span
      // & span.label
      // & a
      // & a:visited      
      //   color: white;
    &:not(.selectable) a
      color: $fourthColor;
    & .details
      margin-left: 100px;
    & .counter
      min-width: 88px;
      border-bottom-right-radius: 6px;
      border-bottom-left-radius: 6px;
      display: inline-block;
      position: absolute;
      bottom: 0;
      left: 20px;
      transition: all .20s ease-in-out;
      cursor: pointer;
      text-align: center;
      display: inline-block;
      overflow: hidden;
      z-index: 100000;   

      & span
        display: inline-block;
        padding: 3px 0 0;
        font-size: 76px;
        font-family: sans-serif;
        font-weight: bold;
        line-height: 1;
        vertical-align: middle;
        color: $secondColor;
        letter-spacing: -0.05em; 

.avatar
  border: 1px solid rgba(0, 0, 0, 0.15);
  margin-right: 10px;
  opacity: .8;
  width: 45px;
  &:hover
    opacity: 1;

#member-page
  & .avatar
    width: 130px;

.app-header
.app-footer .container
.page
  width: 1020px;
  margin: 5px auto;
  z-index: 1;

.page
  min-height: 100%;
  position: relative;
  padding-bottom: 20px;
  & > form
    margin-bottom: 10px;

  & .page-header
    position: relative;
  & .page-toolbar
    position: absolute;
    top: 0;
    right: 0;


header.app-header
  & .main-toolbar
    position: relative;
    height: 50px;
  #user-profile
    position: absolute;
    left: 10px;
    & .avatar
      width: 45px;
      height: 45px;
    & span
      font-size: 20px;
      line-height: 45px;
      font-weight: bold;  
    & .avatar
    & span
      vertical-align: top;  
  #user-toolbar
    position: absolute;
    right: 0;

footer.app-footer
  border-top: 2px solid $fourthColor;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: $fourthColor;
  color: white;
  z-index: 2;
  & .footer-toggle
    padding: 4px 12px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    background-color: $fourthColor;
    color: white;
    position: absolute;
    bottom: 2px;
    right: 20px;
    transition: bottom 0.2s;
    cursor: pointer;
    &:hover
      color: $firstColor;
  & .container
    margin-top: 0;
    margin-bottom: 0;
    height: 0;
    transition: height 0.2s;
    & p
      display: inline-block;
      vertical-align: top;
      margin: 10px 10px 0 0;
  &.expanded
    & .container    
      transition: height 0.2s;
      height: 80px;
    & .footer-toggle
      bottom: 82px;  
      transition: bottom 0.2s;

#home-page.page
  & .community-item
    & .metadata
      left: 118px;
    & .join-community-btn
    & .leave-community-btn
      position: absolute;
      right: 10px;
      top: 20px;
      // &:hover
      //   background-color: $secondColor;
      //   color: $firstColor;  
  & .stats-section
    text-align: center;    
    margin-bottom: 20px;
    & .stats-item
      color: $secondColor;
      text-align: center;
      background: $firstColor;
      padding: 30px 15px;
      min-width: 105px;
      margin-right: 5px;
      display: inline-block;    
      & strong
        font: normal 900 50px/1.0em Helvetica, Arial, sans-serif;
        margin-bottom: 5px;
        display: block;

.metadata
  font-size: 13px;
  position: absolute;
  bottom: 10px;
  right: 10px;
  color: black;
  & span.label
    color: $fourthColor;

ul.participants
  & li
    list-style: none;
    display: inline-block;
    & img
      width: 24px;


#new-community-long-description
  height: 300px;

#goto-new-topic-page-btn
#join-community-btn
#leave-community-btn
.goto-current-community-page-btn
  display: none!important;

html[data-page-name="community-page"].logined
  & #goto-new-topic-page-btn
    display: inline-block!important;
html[data-page-name="topic-page"]
  & .goto-current-community-page-btn
    display: inline-block!important;

#community-page
  & .page-header 
    margin-top: 20px;
    & > h1
      font-size: 24px;
      line-height: 36px;
      text-transform: uppercase;
      &:after
        margin-top: -2px;
        content: "";
        display: block;
        border-bottom: 2px solid $secondColor;
        width: 300px;
    & > h2
      margin-top: 20px;    
      min-height: 16px;
  & .community-intro
    font-size: 15px;
    line-height: 23px;
    margin-top: 20px;
    margin-bottom: 20px;
    color: #4D4D4D;  

#topic-page
  & .message
    & .user-info
      position: absolute;
      right: 5px;  
      top: 5px;
    & .author
      font-weight: bold;
      opacity: 0.8;  
  
.visible
  display: block;
.inline-visible
  display: inline-block;
.invisible
  display: none;