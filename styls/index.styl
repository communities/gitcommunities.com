@import 'nib'
global-reset();
*
  box-sizing: border-box;


html
  &.unlogined
    & .unlogined-show
      display: block;
    & .logined-show
      display: none;
  &.logined
    & .logined-show
      display: block;
    & .unlogined-show
      display: none;


.breadcrumbs ul li
  display: inline-block;


.visible
  display: block;
.inline-visible
  display: inline-block;
.invisible
  display: none;