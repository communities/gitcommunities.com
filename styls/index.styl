@import 'nib'
global-reset();
*
  box-sizing: border-box;


html
  &.unlogined
    & .unlogined-show
      display: block;
    & .logined-show
      display: none;
  &.logined
    & .logined-show
      display: block;
    & .unlogined-show
      display: none;


.breadcrumbs ul li
  display: inline-block;


.avatar
  box-shadow: rgba(0, 0, 0, 0.1) 0 2px 5px;
  border: 2px solid rgba(0, 0, 0, 0.15);
  margin-right: 10px;
  opacity: .8;
  &:hover
    opacity: 1;
    
.visible
  display: block;
.inline-visible
  display: inline-block;
.invisible
  display: none;