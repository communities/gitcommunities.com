@import 'nib'
global-reset();
*
  box-sizing: border-box;


html
  &.unlogined
    & .unlogined-show
      display: block;
    & .logined-show
      display: none;
  &.logined
    & .logined-show
      display: block;
    & .unlogined-show
      display: none;


.breadcrumbs ul li
  display: inline-block;


.avatar
  padding: 3px;
  background-color: white;
  border: 1px solid #DDD;
  border-top: 1px solid #EFEFEF;
  border-bottom: 1px solid #9D9D9D;
  vertical-align: top;

.visible
  display: block;
.inline-visible
  display: inline-block;
.invisible
  display: none;